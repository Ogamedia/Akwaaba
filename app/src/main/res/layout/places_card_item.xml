<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginTop="5dp">

 <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/transparent"
      android:id="@+id/cv">

     <RelativeLayout
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:id="@+id/carded">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:background="@color/orange_600"
            android:id="@+id/imMain"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/imPic3"
            android:layout_toStartOf="@+id/imPic3" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:background="@color/orange_50"
            android:src="@drawable/ic_launcher"
            android:id="@+id/imPic2"
            android:layout_toRightOf="@+id/imMain"
            android:layout_toEndOf="@+id/imMain"
            android:layout_above="@+id/imPic3" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/orange_50"
            android:src="@drawable/ic_launcher"
            android:id="@+id/imPic3"
            android:layout_alignBottom="@+id/imMain"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textView8"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/textView17"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Actual Name"
            android:id="@+id/textView17"
            android:layout_below="@+id/imMain"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="- region"
            android:id="@+id/textView18"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_alignBottom="@+id/textView8"
            android:layout_toRightOf="@+id/textView8"
            android:layout_toEndOf="@+id/textView8" />
    </RelativeLayout>

 </android.support.v7.widget.CardView>

</LinearLayout>
